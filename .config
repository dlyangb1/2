CONFIG_MODULES=y
CONFIG_HAVE_DOT_CONFIG=y

# 目标平台设置（已改为 PSG1208）
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_psg1208=y

# 编译优化
CONFIG_TARGET_OPTIMIZATION="-Os -pipe -mips32r2 -mtune=1004kc"
CONFIG_LINUX_5_15=y

# 网络代理与工具
CONFIG_PACKAGE_tinyproxy=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_libcurl=y

# 内核模块
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-tcp-bbr=y

# 基础系统组件
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_iptables=y
# 替换为 dnsmasq-full
# CONFIG_PACKAGE_dnsmasq is not set
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y

# 文件系统支持（仅保留必要）
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_mount-utils=y
CONFIG_PACKAGE_kmod-fs-ext4=y

# BusyBox 精简配置
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_FEATURE_SYSLOGD=y
CONFIG_BUSYBOX_CONFIG_FEATURE_CROND=y
CONFIG_BUSYBOX_CONFIG_FEATURE_HTTPD=y

# 内核构建信息（可选）
CONFIG_KERNEL_BUILD_USER="copilot"
CONFIG_KERNEL_BUILD_DOMAIN="openwrt"

# 去除 LuCI 图形界面及语言包
# CONFIG_PACKAGE_luci is not set
# CONFIG_PACKAGE_luci-app-ttyd is not set
# CONFIG_PACKAGE_ttyd is not set
# CONFIG_PACKAGE_htop is not set
# CONFIG_PACKAGE_luci-i18n-base-zh-cn is not set

# 去除 IPv6 支持相关组件
# CONFIG_PACKAGE_ipv6helper is not set
# CONFIG_PACKAGE_odhcp6c is not set
# CONFIG_PACKAGE_odhcpd-ipv6only is not set
# CONFIG_PACKAGE_kmod-ipv6 is not set
# CONFIG_PACKAGE_kmod-ip6tables is not set
# CONFIG_PACKAGE_ip6tables is not set
# CONFIG_PACKAGE_dnsmasq_full_dhcpv6 is not set
# CONFIG_PACKAGE_dnsmasq_full_ipset is not set
# CONFIG_PACKAGE_dnsmasq_full_tftp is not set
# CONFIG_PACKAGE_dnsmasq_full_auth is not set
# CONFIG_PACKAGE_dnsmasq_full_dnssec is not set
# CONFIG_PACKAGE_dnsmasq_full_noid is not set
# CONFIG_PACKAGE_dnsmasq_full_conntrack is not set

# 保留空间用于未来扩展
# CONFIG_PACKAGE_xxx=y
